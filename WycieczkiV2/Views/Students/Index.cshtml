@model IEnumerable<WycieczkiV2.ViewModel.StudentViewModel>

@{
    ViewData["Title"] = "Students";
}

<h1 class="h3 mb-4 text-gray-800">Students</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-user-plus"></i> Add new student</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Citizenship</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.DateOfBirth.ToShortDateString()</td>
                    <td>@student.PhoneNumber</td>
                    <td>@student.Email</td>
                    <td>@student.Citizenship</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@student.StudentId"><i class="fas fa-edit"></i> Edit</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@student.StudentId"><i class="fas fa-info-circle"></i> Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@student.StudentId"><i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
