@model IEnumerable<WycieczkiV2.ViewModel.TripViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="h3 mb-4 text-gray-800">Trips</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus-circle"></i> Add new trip</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Origin</th>
                <th>Destination</th>
                <th>Name</th>
                <th>Start date</th>
                <th>Price</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Actions</th>
                }

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Origin</td>
                    <td>@item.Country</td>
                    <td>@item.Name</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Price</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.TripId"><i class="fas fa-edit"></i> Edit</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.TripId"><i class="fas fa-info-circle"></i> Details</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.TripId"><i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>